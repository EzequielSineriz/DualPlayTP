<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DualPlay | Login</title>

    <!-- Bootstrap 5 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Fuente moderna -->
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600&family=Poppins:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="../public/favicon/logo.png">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="public/css/login.css" />
  </head>

  <body>
    <div class="glow"></div>

    <div class="glass-card">
      <img
        id="logo"
        src="public/favicon/logo.png"
        alt="DualPlay Logo"
        class="logo-img"
      />
      <h2>DualPlay</h2>

      <form action="/login" method="POST">
        <input
          type="text"
          name="username"
          class="form-control"
          placeholder="Usuario"
          required
          autocomplete="off"
          id="usuario"
        />
        <input
          type="password"
          name="password"
          class="form-control"
          placeholder="Contraseña"
          autocomplete="off"
          required
          id="contrasena"
        />
        <button id= "btnIngresar" type="submit" class="btn btn-login">Ingresar</button>
      </form>
      <button class="btn btn-primary" id="autoIngreso"> Ingreso automático </button>

      <div class="footer-text">Panel de administración</div>

      <script>
      window.loginMessage = "<%= message || '' %>";
      window.loginType = "<%= type || '' %>";
      window.loginRedirect = "<%= redirect || '' %>";
      </script>

    <script src="/public/js/login.js"></script>

    <!--Sweet Alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/public/js/login.js"></script>
  </body>
</html>

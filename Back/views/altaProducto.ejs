<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DualPlay | Admin</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600&family=Poppins:wght@400;500&display=swap" rel="stylesheet"/>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/public/favicon/logo.png" />

    <!-- Estilos -->
    <link rel="stylesheet" href="/public/css/admin.css">
    <link rel="stylesheet" href="/public/css/altaact.css">
  </head>

  <body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">DualPlay</a>

        <button id="boton-salir" class="btn btn-danger"> Volver </button>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link active" href="/admin">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/altaproducto/?tipo=videojuego">Agregar Videojuegos</a></li>
            <li class="nav-item"><a class="nav-link" href="altaproducto/?tipo=juegodemesa">Agregar Juegos de Mesa</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <main id="main-alta">
      <h2>Creando nuevo producto</h2>
      <div id="div-inputs">
        <div class="input-label">
          <label for="tipo-input">Tipo</label>
          <input class="form-control" id = "tipo-input" disabled="true" type="text">
        </div>
        <div class="input-label">
          <label for="nombre-input">Nombre</label>
          <input autocomplete="off" class="form-control" id="nombre-input" type="text">
        </div>
        <div class="input-label">
          <label for="descripcion-input">Descripcion</label>
          <textarea class="form-control" id = "descripcion-input" type="text"></textarea>
        </div>
        <div class="input-label">
          <label for="precio-input">Precio</label>
          <input autocomplete="off" class="form-control" id = "precio-input" type="text">
        </div>
        <div class="input-label">
          <label for="stock-input">Stock</label>
          <select class="form-select" id="stock-input">
            <option value="1">Con stock</option>
            <option value="0">Sin stock</option>
          </select>
        </div>
        <div class="input-label">
          <label for="imagen-input">Imagen</label>
          <input name= "imagen" class="form-control" id = "imagen-input" type="file" accept="image/jpg, image/png, image/jpeg">
        </div>
      </div>
      <div>
        <button id="boton-alta" class="btn btn-primary"> Subir </button>

      </div>
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/js/alta.js"></script>
  </body>
</html>

